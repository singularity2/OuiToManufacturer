{
  "name": "MAC To OUI",
  "description": "Convert Ethernet MACs to OUIs",
  "manifest_version": 2,
  "version": "0.1",
  "icons": { "128": "img/logo.png",
     "16": "img/logo.png"
  },
  "content_scripts": [ {
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "oui.js", "content.js"
    ],
    "run_at": "document_idle"
  } ],
  "background": {
    "scripts": [ "background.js" ]
  },
  "browser_action": {
    "default_icon": { 
      "19": "img/logo.png",
      "38": "img/logo.png" 
    },
    "default_title": "MAC to OUI"
  },
  "permissions": [
    "storage"
  ]
}
